# GlassTrax Bridge Environment Variables
# Copy this file to .env and update with your actual values
# DO NOT commit the actual .env file to version control

# Database Authentication
# These credentials will be used to connect to the GlassTrax database
DB_USES_AUTH=false
DB_USERNAME=your_username_here
DB_PASSWORD=your_password_here

# Database Connection Settings (Optional)
# Uncomment and modify these if you need custom connection settings
# DB_SERVER=localhost
# DB_PATH=G:/LIVE
# DB_TIMEOUT=30

# Application Settings (Optional)
# Uncomment to override default application behavior
# LOG_LEVEL=INFO
# DEBUG_MODE=false
# MAX_QUERY_ROWS=1000

# Development Settings (Optional)
# Uncomment for development/testing purposes
# ENABLE_DEBUG_LOGGING=false
# DEVELOPMENT_MODE=false

# File Paths (Optional)
# Uncomment to customize file locations
# CONFIG_PATH=config.yaml
# SCHEMA_OUTPUT_PATH=schema.html
# LOG_DIRECTORY=logs 